package java_progs.progs;

import java.io.IOException;
import java.util."ImportListCollection";

import java_progs.aux.ArrayListAux;
import java_progs.aux.TemplatesAux;

public class TemplateCloneCol {
    static int SIZE = "size";

    @SuppressWarnings("unchecked")
    private static "ListCollection"<"Type"> cloneCol("ListCollection"<"Type"> list) {
        return ("ListCollection"<"Type">) list.clone();
    }

    @SuppressWarnings("unused")
    private static void computation("ListCollection"<"Type"> list) {
        "ListCollection"<"Type"> tempList = new "ListCollection"<"Type">();
        while (!TemplatesAux.stop) {
            tempList = cloneCol(list);
        }
    }

    public static void main(String[] args) throws IOException, InterruptedException {
        int iter = 0;
        try {
            createNewCollectionLeftSide list createNewCollectionRightSide
            ArrayListAux.insertRandomNumbers(list,SIZE,""Type"");
            @SuppressWarnings("unused")
            createNewCollectionLeftSide tempList createNewCollectionRightSide
            long begin = System.nanoTime();
            long end = begin;
            while (end - begin < 1000000000/*1s*/) {
                tempList = cloneCol(list);
                end = System.nanoTime();
                iter++;
            }
            TemplatesAux.sendStartSignalToOrchestrator(args[0], iter);
            TemplatesAux.launchTimerThread();
            computation(list);
        } catch (OutOfMemoryError e) {
            TemplatesAux.writeErrorInFile(""filename"", "Out of memory error caught by the program.\n" + e.getMessage());
        } 
        catch (Exception e) {
            TemplatesAux.writeErrorInFile(""filename"","Error caught by th program.\n"+e.getMessage());
        }
        finally {TemplatesAux.sendStopSignalToOrchestrator(args[0]);}
    }
}